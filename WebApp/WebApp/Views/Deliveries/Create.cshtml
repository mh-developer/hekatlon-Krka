@model DeliveryDto

<div class="login-form">
    <form asp-action="Create">
        <div class="avatar"><i class="material-icons">mail</i></div>
        <h4 class="modal-title">Nov zahtevek za pošiljko</h4>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <input asp-for="Code" type="text" class="form-control" placeholder="Šifra pošiljke" required="required">
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="SourceCompany" type="text" class="form-control" placeholder="Podjetje, ki dostavlja" required="required">
            <span asp-validation-for="SourceCompany" class="text-danger"></span>
        </div>
        <input type="submit" class="btn btn-primary btn-block btn-lg" value="Oddaja zahtevka">
    </form>
</div>

<div>
    <a asp-action="Index">Nazaj na seznam</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
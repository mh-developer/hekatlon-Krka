@model WebApp.Models.Account.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}


<div class="login-form">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="avatar"><i class="material-icons">&#xE7FF;</i></div>
        <h4 class="modal-title">Registracija</h4>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input type="text" asp-for="FirstName" class="form-control" placeholder="Ime" required="required">
        </div>
        <div class="form-group">
            <input type="text" asp-for="LastName" class="form-control" placeholder="Priimek" required="required">
        </div>
        <div class="form-group">
            <input type="email" asp-for="Email" class="form-control" placeholder="E-pošta" required="required">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="text" asp-for="Company" class="form-control" placeholder="Podjetje" required="required">
        </div>
        <div class="form-group">
            <input type="password" asp-for="Password" class="form-control" placeholder="Geslo" required="required">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Ponovno vnesite geslo" required="required">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <input type="submit" class="btn btn-primary btn-block btn-lg" value="Registracija">
    </form>
    <div class="text-center small">Že imate račun? <a asp-controller="Account" asp-action="Login" asp-area="">Prijava</a></div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

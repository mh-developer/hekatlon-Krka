
@model WebApp.Models.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Ste pozabili geslo?";
}

<div class="login-form">
    <form id="account" method="post">
        <div class="avatar">
            <i class="material-icons">&#xE7FF;</i>
        </div>
        <h4>Vpišite svoj elektronski naslov za ponastavitev gesla.</h4>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Email" class="form-control" placeholder="E-Mail"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <input type="submit" class="btn btn-primary btn-block btn-lg" value="Pošlji">
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
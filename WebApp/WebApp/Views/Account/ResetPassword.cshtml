@model WebApp.Models.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Ponastavitev gesla";
}

<div class="login-form">
    <form id="account" method="post">
        <div class="avatar">
            <i class="material-icons">https</i>
        </div>
        <h4>Ponastavitev gesla.</h4>

        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" />
        <div class="form-group">
            <input asp-for="Email" type="email" class="form-control" placeholder="E-pošta" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Password" type="password" class="form-control" placeholder="Geslo" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Ponovite geslo" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <input type="submit" class="btn btn-primary btn-block btn-lg" value="Ponastavi">
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@model WebApp.Models.Account.LoginViewModel

@{
    ViewData["Title"] = "Log in";
}

<div class="login-form">
    <form id="account" method="post">
        <div class="avatar">
            <i class="material-icons">&#xE7FF;</i>
        </div>
        <h4 class="modal-title">Prijava</h4>

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input type="email" asp-for="Email" class="form-control" placeholder="Uporabniško ime" required="required">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="password" asp-for="Password" class="form-control" placeholder="Geslo" required="required">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group small clearfix">
            <label class="checkbox-inline" asp-for="RememberMe">
                <input type="checkbox" asp-for="RememberMe"> Zapomni si me
            </label>
            <a asp-controller="Account" asp-action="ForgotPassword" asp-area="" class="forgot-link">Ste pozabili geslo?</a>
        </div>
        <input type="submit" class="btn btn-primary btn-block btn-lg" value="Prijava">
    </form>

    <div class="text-center small">Še nimate računa? <a asp-controller="Account" asp-action="Register" asp-area="">Registracija</a></div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
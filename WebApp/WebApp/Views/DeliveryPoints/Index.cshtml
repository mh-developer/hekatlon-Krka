<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-5">
                    <h2>Dostavne točke</h2>
                </div>
                <div class="col-sm-7">
                    <a asp-controller="DeliveryPoints" asp-action="Create" class="btn btn-primary">
                        <i class="material-icons">&#xE147;</i> <span>Dodaj dostavno točko</span>
                    </a>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Naziv</th>
                <th>Naslov</th>
                <th>Skladišče</th>
                <th>Tel. številka</th>
                <th>Status</th>
                <th>Akcije</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var deliveryPoint in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => deliveryPoint.Name)</td>
                    <td>@Html.DisplayFor(modelItem => deliveryPoint.Address)</td>
                    <td>@Html.DisplayFor(modelItem => deliveryPoint.Warehouse.Name)</td>
                    <td>@Html.DisplayFor(modelItem => deliveryPoint.PhoneNumber)</td>
                    <td><span class="status text-success">&bull;</span> Obratuje</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@deliveryPoint.Id" class="settings" title="Uredi" data-toggle="tooltip">
                            <i class="material-icons">&#xE8B8;</i>
                        </a>
                        <a asp-controller="DeliveryPoints" asp-action="Delete" asp-route-id="@deliveryPoint.Id" class="delete" title="Odstrani" data-toggle="tooltip">
                            <i class="material-icons">&#xE5C9;</i>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <div class="clearfix">
            <div class="hint-text">Prikazanih <b>@Model.Count()</b> od <b>@Model.Count()</b> zapisov.</div>
            <ul class="pagination">
                <li class="page-item disabled">
                    <a href="#">Nazaj</a>
                </li>
                <li class="page-item active">
                    <a href="#" class="page-link">1</a>
                </li>
                <li class="page-item">
                    <a href="#" class="page-link">2</a>
                </li>
                <li class="page-item">
                    <a href="#" class="page-link">3</a>
                </li>
                <li class="page-item">
                    <a href="#" class="page-link">4</a>
                </li>
                <li class="page-item">
                    <a href="#" class="page-link">5</a>
                </li>
                <li class="page-item">
                    <a href="#" class="page-link">Naprej</a>
                </li>
            </ul>
        </div>
    </div>
</div>